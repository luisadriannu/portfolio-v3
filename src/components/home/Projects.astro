          projects.map((project) => (
            <div class="flex flex-col justify-between gap-6 rounded-xl bg-primary-500/10 px-6 py-8 dark:bg-primary-400/10">
              <img
                class="h-auto w-full rounded-xl"
                src={project.image}
                alt={`Proyecto ${project.step}`}
              />
              <p class="text-sm">{project.step}</p>
              <div class="flex flex-col gap-4">
                <h3 class="text-xl font-medium">{project.name}</h3>
                <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                  {project.description}
                </p>
              </div>
              <div>
                <p class="pb-3">Herramientas utilizadas:</p>
                <li>{project.tools ? project.tools[0] : null}</li>
                <li>{project.tools ? project.tools[1] : null}</li>
                <div />
