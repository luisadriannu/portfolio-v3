              <div class="flex flex-row">
                <div>
                  <a
                    class:list={[
                      'bg-yellow inline-flex w-56 items-center justify-center gap-1 rounded-xl py-4 text-center font-medium text-white',
                      {
                        'pointer-events-none': !project.isAvailable,
                        'pointer-events-auto': project.isAvailable,
                      },
                    ]}
                    href={project.url}
                    target="_blank"
                    rel="noopener"
                  >
